<Page
    x:Class="Assignment2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top">
            <TextBlock TextWrapping="NoWrap"  Text="Assignment2" FontSize="{StaticResource HubHeaderFontSize}"/>

        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Top" Margin="30">
          
            <TextBox x:Name="InputBox" Margin="0" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="276" PlaceholderText="Insert a city and press Search"/>
            <Button Content="Search" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Button_Search"/>
            <Button Content="Go to weather information" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" Click="Button_Weather"/>


        </StackPanel>

    </Grid>
</Page>
